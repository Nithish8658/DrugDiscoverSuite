<Window x:Class="UI_WindowsApp.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="AI Drug Discovery Assistant" Height="300" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row 0: Input label -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Input textbox -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2: Button -->
            <RowDefinition Height="*"/>
            <!-- Row 3: Output -->
        </Grid.RowDefinitions>
        <TextBlock Text="Enter Disease Name:" FontSize="14" Grid.Row="0" />
        <TextBox x:Name="DiseaseInput" Margin="0,10,0,10" Height="30" FontSize="14" Grid.Row="1" />
        <Button Content="Run Full Pipeline" Click="RunPipeline_Click" Width="160" Height="30" Grid.Row="2" />

        <TextBlock x:Name="ResultBlock" Grid.Row="3" Margin="0,20,0,0" TextWrapping="Wrap"
           FontSize="14" Foreground="DarkGreen"/>

    </Grid>
</Window>
        
        
